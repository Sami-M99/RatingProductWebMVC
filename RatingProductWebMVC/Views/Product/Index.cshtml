            @foreach (var product in ViewBag.products)
            {
                <div class="col-md-3">
                    <div class="wsk-cp-product">
                        <div class="wsk-cp-img"><img src="~/Content/Images/Products/@product.Photo" alt="Product" class="img-responsive" /></div>
                        <div class="wsk-cp-text">
                            <div class="text-center">
                                <p><a class="btn theme-button" style="color:orange" href="@Url.Action("Detail", "Product", new { id = @product.Id })">More Details</a></p>
                                @*<span><i><a href="@Url.Action("Detail", "Product", new { id = @product.Id })" class="wsk-btn">Details</a></i></span>*@
                                <br />
